{
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm run build:vercel",
  "installCommand": "cd frontend && npm install",
  "rootDirectory": "frontend",
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin-allow-popups"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        }
      ]
    }
  ]
}
